<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/MyTheme"
 >


    <TextView
        android:id="@+id/tv_detail_bottom_copy"
        style="@style/TextView.BottomSheet"
        android:layout_gravity="center_vertical"
        android:text="@string/copy"
        app:drawableStartCompat="@drawable/ic_baseline_copy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_detail_bottom_share"
        style="@style/TextView.BottomSheet"
        android:text="@string/share"
        app:drawableStartCompat="@drawable/ic_baseline_share"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_bottom_copy" />

</androidx.constraintlayout.widget.ConstraintLayout>